# Maintainer : Fenner Macrae <fmacrae.dev@gmail.com>

_pkgname=flashfocus
pkgname=$_pkgname-git
pkgver=0.10.r10.gbe9941d
pkgrel=1
pkgdesc="Simple Xorg window focus animations for tiling window managers"
url="https://www.github.com/fennerm/flashfocus"
depends=('python' 'python-xcffib' 'python-tendo' 'python-click')
makedepends=('git', 'python-setuptools' 'python-pypandoc')
conflicts=('flashfocus')
provides=('flashfocus')
license=('MIT')
arch=('any')
source=("${_pkgname}::git+${url}.git")
md5sums=("SKIP")

pkgver() {
    cd "$srcdir/$_pkgname"
    git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
    cd "${srcdir}/${_pkgname}"
    python setup.py build
}

package() {
    cd "${srcdir}/${_pkgname}"
    python setup.py install --root="${pkgdir}" --optimize=1 --skip-build
}
